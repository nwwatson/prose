<div id="ai-image-modal-content">
  <div class="rounded-lg bg-red-50 p-3 text-sm text-red-700">
    Image generation error: <%= error %>
  </div>
  <div class="mt-2 flex gap-2">
    <%= button_to "Try Again", suggest_prompt_admin_post_ai_featured_image_path(post),
          method: :post,
          class: "rounded-md bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700 hover:bg-gray-200",
          data: { turbo_stream: true } %>
    <button type="button" data-action="click->ai-image-modal#cancel"
            class="rounded-md bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700 hover:bg-gray-200">
      Cancel
    </button>
  </div>
</div>
