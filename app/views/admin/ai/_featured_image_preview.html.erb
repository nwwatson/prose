<div id="ai-image-modal-content" class="space-y-3">
  <p class="text-xs font-medium text-gray-500"><%= t('admin.ai.featured_image_preview.generated_image') %></p>
  <% if post.featured_image.attached? %>
    <div class="overflow-hidden rounded-lg border border-gray-200">
      <%= image_tag rails_storage_proxy_path(post.featured_image), class: "w-full" %>
    </div>
    <div class="flex gap-2">
      <button type="button" data-action="click->ai-image-modal#saveAndClose"
              class="rounded-md bg-indigo-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-indigo-500">
        <%= t('admin.ai.featured_image_preview.save_as_featured') %>
      </button>
      <button type="button" data-action="click->ai-image-modal#regenerate"
              class="rounded-md bg-gray-100 px-3 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-200">
        <%= t('admin.ai.featured_image_preview.regenerate') %>
      </button>
      <button type="button" data-action="click->ai-image-modal#cancel"
              class="rounded-md bg-gray-100 px-3 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-200">
        <%= t('shared.cancel') %>
      </button>
    </div>
  <% end %>
</div>
