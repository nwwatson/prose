<div id="ai-image-modal-content" class="space-y-3">
  <p class="text-xs font-medium text-gray-500">AI-Suggested Image Prompt</p>
  <form data-action="submit->ai-image-modal#generate">
    <textarea name="prompt" rows="4" data-ai-image-modal-target="promptInput"
              class="block w-full rounded-md bg-white px-3 py-2 text-sm text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600"><%= suggested_prompt %></textarea>
    <div class="mt-3 flex gap-2">
      <button type="submit" class="rounded-md bg-indigo-600 px-3 py-1.5 text-xs font-medium text-white hover:bg-indigo-500 cursor-pointer">
        Generate Image
      </button>
      <button type="button" data-action="click->ai-image-modal#regenerate"
              class="rounded-md bg-gray-100 px-3 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-200">
        Suggest New Prompt
      </button>
      <button type="button" data-action="click->ai-image-modal#cancel"
              class="rounded-md bg-gray-100 px-3 py-1.5 text-xs font-medium text-gray-700 hover:bg-gray-200">
        Cancel
      </button>
    </div>
  </form>
</div>
