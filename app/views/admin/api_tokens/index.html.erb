<% content_for(:title) { "API Tokens" } %>

<div class="max-w-4xl">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">API Tokens</h1>
  </div>

  <% if flash[:raw_token] %>
    <div class="mb-6 rounded-lg border border-green-200 bg-green-50 p-4">
      <p class="text-sm font-medium text-green-800 mb-2">Your new API token (copy it now â€” it won't be shown again):</p>
      <div class="flex items-center gap-2">
        <code class="flex-1 rounded bg-white px-3 py-2 font-mono text-sm text-gray-900 border border-green-200 select-all"><%= flash[:raw_token] %></code>
        <button type="button" onclick="navigator.clipboard.writeText('<%= flash[:raw_token] %>')" class="rounded bg-green-600 px-3 py-2 text-sm font-medium text-white hover:bg-green-700">
          Copy
        </button>
      </div>
    </div>
  <% end %>

  <%# Create form %>
  <div class="mb-8 rounded-lg border border-gray-200 bg-white p-4">
    <h2 class="text-sm font-medium text-gray-700 mb-3">Create New Token</h2>
    <%= form_with url: admin_api_tokens_path, method: :post, class: "flex items-end gap-3" do |f| %>
      <div class="flex-1">
        <label for="name" class="block text-sm text-gray-600 mb-1">Token Name</label>
        <input type="text" name="name" id="name" required placeholder="e.g., Claude Desktop" class="w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
      </div>
      <button type="submit" class="rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700">
        Generate Token
      </button>
    <% end %>
  </div>

  <%# Token list %>
  <% if @api_tokens.any? %>
    <div class="overflow-hidden rounded-lg border border-gray-200 bg-white">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Name</th>
            <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Prefix</th>
            <% if current_user.admin? %>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Owner</th>
            <% end %>
            <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Last Used</th>
            <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Created</th>
            <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500">Status</th>
            <th class="px-4 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @api_tokens.each do |token| %>
            <tr>
              <td class="px-4 py-3 text-sm font-medium text-gray-900"><%= token.name %></td>
              <td class="px-4 py-3 text-sm font-mono text-gray-500"><%= token.token_prefix %>...</td>
              <% if current_user.admin? %>
                <td class="px-4 py-3 text-sm text-gray-500"><%= token.user.display_name %></td>
              <% end %>
              <td class="px-4 py-3 text-sm text-gray-500">
                <%= token.last_used_at ? time_ago_in_words(token.last_used_at) + " ago" : "Never" %>
              </td>
              <td class="px-4 py-3 text-sm text-gray-500"><%= token.created_at.strftime("%b %d, %Y") %></td>
              <td class="px-4 py-3 text-sm">
                <% if token.revoked? %>
                  <span class="inline-flex items-center rounded-full bg-red-100 px-2 py-0.5 text-xs font-medium text-red-800">Revoked</span>
                <% else %>
                  <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Active</span>
                <% end %>
              </td>
              <td class="px-4 py-3 text-right text-sm">
                <% unless token.revoked? %>
                  <%= button_to "Revoke", admin_api_token_path(token), method: :delete,
                        class: "text-red-600 hover:text-red-800 text-sm font-medium",
                        data: { turbo_confirm: "Revoke this token? Any applications using it will lose access." } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-sm text-gray-500">No API tokens yet. Create one to connect Claude Desktop or other MCP clients.</p>
  <% end %>
</div>
