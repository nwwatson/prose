<%= form_with model: [ :admin, category ], class: "space-y-6" do |f| %>
  <% if category.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <ul class="list-disc pl-5 text-sm text-red-700">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="max-w-lg space-y-6">
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :slug, class: "block text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.text_field :slug, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm", placeholder: t('admin.categories.form.slug_placeholder') %>
      </div>
      <p class="mt-1 text-xs text-gray-500"><%= t('admin.categories.form.slug_help') %></p>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.text_area :description, rows: 3, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
      </div>
    </div>

    <div>
      <%= f.label :position, class: "block text-sm font-medium text-gray-900" %>
      <div class="mt-2">
        <%= f.number_field :position, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
      </div>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to t('shared.cancel'), admin_categories_path, class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
      <%= f.submit class: "rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 cursor-pointer" %>
    </div>
  </div>
<% end %>
