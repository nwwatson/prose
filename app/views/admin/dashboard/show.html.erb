<% content_for(:title, "Dashboard — #{site_name}") %>

<div>
  <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  <p class="mt-2 text-sm text-gray-600">Welcome back, <%= current_user.display_name %>.</p>
</div>

<div class="mt-8 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="text-sm font-medium text-gray-500 truncate">Total Subscribers</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_subscribers %></div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="text-sm font-medium text-gray-500 truncate">New Subscribers (30d)</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @new_subscribers_30d %></div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="text-sm font-medium text-gray-500 truncate">Total Views (30d)</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= @total_views_30d %></div>
    </div>
  </div>

  <div class="bg-white overflow-hidden shadow rounded-lg">
    <div class="p-5">
      <div class="text-sm font-medium text-gray-500 truncate">Published Posts</div>
      <div class="mt-1 text-3xl font-semibold text-gray-900"><%= Post.published.count %></div>
    </div>
  </div>
</div>

<div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2">
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900">Views (Last 30 Days)</h2>
    <div class="mt-4" data-controller="chart" data-chart-type-value="line" data-chart-data-value="<%= @views_by_day.to_json %>">
      <canvas data-chart-target="canvas" class="w-full" height="200"></canvas>
    </div>
    <% if @views_by_day.empty? %>
      <p class="mt-4 text-sm text-gray-500">No view data yet.</p>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900">Subscriber Growth (Last 30 Days)</h2>
    <div class="mt-4" data-controller="chart" data-chart-type-value="line" data-chart-data-value="<%= @subscriber_growth.to_json %>">
      <canvas data-chart-target="canvas" class="w-full" height="200"></canvas>
    </div>
    <% if @subscriber_growth.empty? %>
      <p class="mt-4 text-sm text-gray-500">No subscriber data yet.</p>
    <% end %>
  </div>
</div>

<div class="mt-8 grid grid-cols-1 gap-8 lg:grid-cols-2">
  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Top Posts (30 Days)</h2>
    <% if @top_posts.any? %>
      <table class="min-w-full divide-y divide-gray-200">
        <thead>
          <tr>
            <th class="text-left text-xs font-medium text-gray-500 uppercase pb-2">Post</th>
            <th class="text-right text-xs font-medium text-gray-500 uppercase pb-2">Views</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @top_posts.each do |post| %>
            <tr>
              <td class="py-2 text-sm text-gray-900">
                <%= link_to post.title, admin_post_dashboard_path(post), class: "hover:text-indigo-600" %>
              </td>
              <td class="py-2 text-sm text-gray-500 text-right"><%= post.views_count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-sm text-gray-500">No views recorded yet.</p>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg p-6">
    <h2 class="text-lg font-medium text-gray-900 mb-4">Recent Posts</h2>
    <% if @recent_posts.any? %>
      <div class="space-y-3">
        <% @recent_posts.each do |post| %>
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-900"><%= link_to post.title, edit_admin_post_path(post), class: "hover:text-indigo-600" %></p>
              <p class="text-xs text-gray-500"><%= post.published_at&.strftime("%b %d, %Y") %> · <%= post.user.display_name %></p>
            </div>
            <div class="text-sm text-gray-500"><%= post.loves_count %> loves</div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-sm text-gray-500">No published posts yet.</p>
    <% end %>
  </div>
</div>
