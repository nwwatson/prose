<% content_for(:title, "Newsletter Settings — #{site_name}") %>

<div class="max-w-4xl">
  <h1 class="text-2xl font-bold text-gray-900">Newsletter Settings</h1>
  <p class="mt-1 text-sm text-gray-600">Configure email branding and delivery for your newsletters.</p>

  <%= form_with model: @site_setting, url: admin_newsletter_settings_path, class: "mt-8 space-y-6" do |f| %>
    <% if @site_setting.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <h3 class="text-sm font-medium text-red-800"><%= pluralize(@site_setting.errors.count, "error") %> prevented settings from being saved:</h3>
        <ul class="mt-2 list-disc pl-5 text-sm text-red-700">
          <% @site_setting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# Email Branding %>
    <% fonts_json = SiteSetting::EmailBranding::EMAIL_FONT_FAMILIES.transform_values { |v| v[:stack] }.to_json %>
    <fieldset data-controller="email-branding-preview" data-email-branding-preview-fonts-value="<%= fonts_json %>">
      <legend class="text-lg font-semibold text-gray-900">Email Branding</legend>
      <p class="mt-1 text-sm text-gray-600">Customize the look of your newsletter emails. These are site-wide defaults that can be overridden per newsletter.</p>

      <div class="mt-6 grid grid-cols-1 gap-8 lg:grid-cols-2">
        <div class="space-y-6">
          <%# Default template %>
          <div>
            <%= f.label :email_default_template, "Default template", class: "block text-sm font-medium text-gray-900" %>
            <%= render "shared/custom_select", form: f, field: :email_default_template,
                  options: SiteSetting::EmailBranding::EMAIL_TEMPLATES.map { |k, v| [v[:name], k] },
                  data: { email_branding_preview_target: "template", action: "change->email-branding-preview#update" } %>
          </div>

          <%# Header logo %>
          <div>
            <%= f.label :email_header_logo, "Header logo", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <% if @site_setting.email_header_logo.attached? %>
                <div class="mb-3">
                  <%= image_tag @site_setting.email_header_logo, class: "max-h-12 rounded" %>
                </div>
              <% end %>
              <%= f.file_field :email_header_logo, accept: "image/*", class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-gray-100 file:text-gray-700 hover:file:bg-gray-200" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Displayed in the Branded template header. Recommended max height: 48px.</p>
          </div>

          <hr class="border-gray-200">

          <%# Colors %>
          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wide text-gray-500">Colors</h3>
            <div class="mt-3 space-y-4">
              <div>
                <%= f.label :email_accent_color, "Accent color", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1 flex items-center gap-2">
                  <%= f.color_field :email_accent_color, data: { email_branding_preview_target: "accentColor", action: "input->email-branding-preview#update" }, class: "h-8 w-8 cursor-pointer rounded border border-gray-300 p-0.5" %>
                  <%= f.text_field :email_accent_color, data: { email_branding_preview_target: "accentColorText", action: "input->email-branding-preview#update" }, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :email_background_color, "Background color", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1 flex items-center gap-2">
                  <%= f.color_field :email_background_color, data: { email_branding_preview_target: "backgroundColor", action: "input->email-branding-preview#update" }, class: "h-8 w-8 cursor-pointer rounded border border-gray-300 p-0.5" %>
                  <%= f.text_field :email_background_color, data: { email_branding_preview_target: "backgroundColorText", action: "input->email-branding-preview#update" }, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :email_body_text_color, "Body text color", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1 flex items-center gap-2">
                  <%= f.color_field :email_body_text_color, data: { email_branding_preview_target: "textColor", action: "input->email-branding-preview#update" }, class: "h-8 w-8 cursor-pointer rounded border border-gray-300 p-0.5" %>
                  <%= f.text_field :email_body_text_color, data: { email_branding_preview_target: "textColorText", action: "input->email-branding-preview#update" }, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :email_heading_color, "Heading color", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1 flex items-center gap-2">
                  <%= f.color_field :email_heading_color, data: { email_branding_preview_target: "headingColor", action: "input->email-branding-preview#update" }, class: "h-8 w-8 cursor-pointer rounded border border-gray-300 p-0.5" %>
                  <%= f.text_field :email_heading_color, data: { email_branding_preview_target: "headingColorText", action: "input->email-branding-preview#update" }, class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 sm:text-sm" %>
                </div>
              </div>
            </div>
          </div>

          <hr class="border-gray-200">

          <%# Font family %>
          <div>
            <%= f.label :email_font_family, "Font family", class: "block text-sm font-medium text-gray-900" %>
            <%= render "shared/custom_select", form: f, field: :email_font_family,
                  options: SiteSetting::EmailBranding::EMAIL_FONT_FAMILIES.map { |k, v| [v[:name], k] },
                  data: { email_branding_preview_target: "fontFamily", action: "change->email-branding-preview#update" } %>
          </div>

          <%# Preheader text %>
          <div>
            <%= f.label :email_preheader_text, "Default preheader text", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :email_preheader_text, placeholder: "Preview text shown in inbox...", maxlength: 150,
                    data: { email_branding_preview_target: "preheader", action: "input->email-branding-preview#update" },
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Short text shown in email clients before opening the message.</p>
          </div>

          <%# Footer text %>
          <div>
            <%= f.label :email_footer_text, "Custom footer text", class: "block text-sm font-medium text-gray-900" %>
            <div class="mt-2">
              <%= f.text_area :email_footer_text, rows: 2, placeholder: "e.g. 123 Main St, City, State 12345",
                    data: { email_branding_preview_target: "footer", action: "input->email-branding-preview#update" },
                    class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Appears in the footer of all newsletter emails.</p>
          </div>

          <hr class="border-gray-200">

          <%# Social links %>
          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wide text-gray-500">Social Links</h3>
            <div class="mt-3 space-y-4">
              <div>
                <%= f.label :email_social_twitter, "Twitter / X", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1">
                  <%= f.url_field :email_social_twitter, placeholder: "https://x.com/yourhandle",
                        data: { email_branding_preview_target: "socialTwitter", action: "input->email-branding-preview#update" },
                        class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :email_social_github, "GitHub", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1">
                  <%= f.url_field :email_social_github, placeholder: "https://github.com/yourhandle",
                        data: { email_branding_preview_target: "socialGithub", action: "input->email-branding-preview#update" },
                        class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :email_social_linkedin, "LinkedIn", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1">
                  <%= f.url_field :email_social_linkedin, placeholder: "https://linkedin.com/in/yourprofile",
                        data: { email_branding_preview_target: "socialLinkedin", action: "input->email-branding-preview#update" },
                        class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
                </div>
              </div>

              <div>
                <%= f.label :email_social_website, "Website", class: "block text-sm font-medium text-gray-900" %>
                <div class="mt-1">
                  <%= f.url_field :email_social_website, placeholder: "https://yoursite.com",
                        data: { email_branding_preview_target: "socialWebsite", action: "input->email-branding-preview#update" },
                        class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%# Right column — Sticky preview %>
        <div class="lg:sticky lg:top-20 lg:self-start">
          <div class="rounded-md border border-gray-200 overflow-hidden" data-email-branding-preview-target="preview">
            <%# Preheader %>
            <div style="padding: 8px 16px; background-color: #f9fafb; border-bottom: 1px solid #e5e7eb;">
              <p class="text-xs text-gray-400 mb-0.5">Preheader</p>
              <p style="font-size: 12px; line-height: 1.4; color: #6b7280; margin: 0; opacity: <%= @site_setting.email_preheader_text.present? ? '1' : '0.5' %>;" data-email-branding-preview-target="previewPreheader"><%= @site_setting.email_preheader_text.presence || "Preview text shown in inbox..." %></p>
            </div>

            <%# Template badge %>
            <div style="padding: 6px 16px; background-color: #f9fafb; border-bottom: 1px solid #e5e7eb;">
              <span class="inline-flex items-center gap-1 text-xs text-gray-500">
                Template: <strong data-email-branding-preview-target="previewTemplate"><%= SiteSetting::EmailBranding::EMAIL_TEMPLATES.dig(@site_setting.email_default_template.presence || "minimal", :name) || "Minimal" %></strong>
              </span>
              <span class="mx-2 text-gray-300">|</span>
              <span class="inline-flex items-center gap-1 text-xs text-gray-500">
                Font: <strong data-email-branding-preview-target="previewFont"><%= SiteSetting::EmailBranding::EMAIL_FONT_FAMILIES.dig(@site_setting.email_font_family.presence || "system", :name) || "System Default" %></strong>
              </span>
            </div>

            <%# Email body preview %>
            <div style="background-color: <%= @site_setting.email_background_color %>; padding: 16px;" data-email-branding-preview-target="previewBg">
              <div style="background-color: <%= @site_setting.email_accent_color %>; height: 6px; border-radius: 4px 4px 0 0;" data-email-branding-preview-target="previewAccent"></div>
              <div style="background-color: #ffffff; padding: 16px; border-radius: 0 0 4px 4px;">
                <h3 style="color: <%= @site_setting.email_heading_color %>; font-size: 16px; font-weight: 700; margin: 0 0 8px; font-family: <%= @site_setting.email_font_stack %>;" data-email-branding-preview-target="previewHeading">Newsletter Heading</h3>
                <p style="color: <%= @site_setting.email_body_text_color %>; font-size: 13px; line-height: 1.5; margin: 0; font-family: <%= @site_setting.email_font_stack %>;" data-email-branding-preview-target="previewBody">This is how your newsletter body text will look with the selected colors and font.</p>
              </div>
            </div>

            <%# Footer & Social links %>
            <div style="padding: 10px 16px; background-color: #f9fafb; border-top: 1px solid #e5e7eb;">
              <%# Social icons row %>
              <% has_social = [@site_setting.email_social_twitter, @site_setting.email_social_github, @site_setting.email_social_linkedin, @site_setting.email_social_website].any?(&:present?) %>
              <div data-email-branding-preview-target="previewSocial" class="flex items-center justify-center gap-3 mb-2" style="<%= has_social ? '' : 'display: none;' %>">
                <span data-email-branding-preview-target="previewSocialTwitter" style="<%= @site_setting.email_social_twitter.present? ? 'display: inline-block;' : 'display: none;' %>">
                  <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                </span>
                <span data-email-branding-preview-target="previewSocialGithub" style="<%= @site_setting.email_social_github.present? ? 'display: inline-block;' : 'display: none;' %>">
                  <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/></svg>
                </span>
                <span data-email-branding-preview-target="previewSocialLinkedin" style="<%= @site_setting.email_social_linkedin.present? ? 'display: inline-block;' : 'display: none;' %>">
                  <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                </span>
                <span data-email-branding-preview-target="previewSocialWebsite" style="<%= @site_setting.email_social_website.present? ? 'display: inline-block;' : 'display: none;' %>">
                  <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418"/></svg>
                </span>
              </div>

              <%# Footer text %>
              <p style="font-size: 11px; line-height: 1.4; color: #9ca3af; margin: 0; text-align: center; opacity: <%= @site_setting.email_footer_text.present? ? '1' : '0.5' %>;" data-email-branding-preview-target="previewFooter"><%= @site_setting.email_footer_text.presence || "Custom footer text" %></p>
            </div>
          </div>
        </div>
      </div>
    </fieldset>

    <%# Email Service Configuration %>
    <fieldset class="border-t border-gray-200 pt-6">
      <legend class="text-lg font-semibold text-gray-900">Email Service</legend>
      <p class="mt-1 text-sm text-gray-600">Configure how newsletters are delivered. SMTP uses your default mail settings. SendGrid provides delivery tracking and analytics.</p>

      <div class="mt-4 space-y-4">
        <div>
          <%= f.label :email_provider, "Email Provider", class: "block text-sm font-medium text-gray-900" %>
          <%= render "shared/custom_select", form: f, field: :email_provider,
                options: SiteSetting::EmailConfiguration::EMAIL_PROVIDERS.map { |k, v| [v, k] } %>
        </div>

        <div>
          <%= f.label :sendgrid_api_key, "SendGrid API Key", class: "block text-sm font-medium text-gray-900" %>
          <div class="mt-2">
            <%= f.password_field :sendgrid_api_key,
                  value: @site_setting.sendgrid_api_key.present? ? "••••••••" : "",
                  placeholder: "SG...",
                  autocomplete: "off",
                  class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
          </div>
          <p class="mt-1 text-xs text-gray-500">Required when using SendGrid. Get your API key from <strong>Settings &rarr; API Keys</strong> in your SendGrid dashboard.</p>
        </div>

        <div class="rounded-md bg-blue-50 p-4">
          <p class="text-sm text-blue-800">
            <strong>Webhook URL:</strong> To enable open/click tracking, configure the SendGrid Event Webhook to POST to:
            <code class="ml-1 rounded bg-blue-100 px-1.5 py-0.5 text-xs font-mono"><%= request.base_url %>/webhooks/sendgrid</code>
          </p>
        </div>
      </div>
    </fieldset>

    <div class="flex justify-end border-t border-gray-200 pt-6">
      <%= f.submit "Save settings", class: "rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
