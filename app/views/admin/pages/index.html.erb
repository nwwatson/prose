<% content_for(:title, "Pages â€” #{site_name}") %>

<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-bold text-gray-900"><%= t("admin.pages.index.title") %></h1>
    <%= link_to t("admin.pages.index.new_page"), new_admin_page_path, class: "rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700" %>
  </div>

  <% if @pages.any? %>
    <div class="overflow-hidden bg-white shadow ring-1 ring-gray-200 sm:rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"><%= t("admin.pages.index.title_header") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"><%= t("admin.pages.index.status") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"><%= t("admin.pages.index.nav") %></th>
            <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500"><%= t("admin.pages.index.slug") %></th>
            <th class="relative px-6 py-3"><span class="sr-only"><%= t("shared.actions") %></span></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 bg-white">
          <% @pages.each do |page| %>
            <tr>
              <td class="px-6 py-4">
                <%= link_to page.title, edit_admin_page_path(page), class: "text-sm font-medium text-gray-900 hover:text-gray-600" %>
              </td>
              <td class="whitespace-nowrap px-6 py-4">
                <span class="inline-flex items-center rounded-full px-2.5 py-0.5 text-xs font-medium
                  <%= page.published? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
                  <%= page.status.capitalize %>
                </span>
              </td>
              <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500">
                <% if page.show_in_navigation? %>
                  <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-medium text-blue-800"><%= t("admin.pages.index.in_nav") %></span>
                <% end %>
              </td>
              <td class="whitespace-nowrap px-6 py-4 text-sm text-gray-500 font-mono">/<%= page.slug %></td>
              <td class="whitespace-nowrap px-6 py-4 text-right text-sm font-medium">
                <%= link_to t("shared.edit"), edit_admin_page_path(page), class: "text-gray-600 hover:text-gray-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="rounded-lg border-2 border-dashed border-gray-300 p-12 text-center">
      <h3 class="text-sm font-semibold text-gray-900"><%= t("admin.pages.index.no_pages") %></h3>
      <p class="mt-1 text-sm text-gray-500"><%= t("admin.pages.index.get_started") %></p>
      <div class="mt-6">
        <%= link_to t("admin.pages.index.new_page"), new_admin_page_path, class: "rounded-md bg-gray-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700" %>
      </div>
    </div>
  <% end %>
</div>
