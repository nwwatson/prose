<% content_for(:title, "Setup â€” #{site_name}") %>

<p class="mt-2 text-center text-sm text-gray-600">Create your admin account to get started.</p>

<%= form_with model: @user, url: admin_setup_path, class: "mt-6 space-y-6" do |f| %>
  <% if @user.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <ul class="list-disc space-y-1 pl-5 text-sm text-red-800">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :display_name, class: "block text-sm font-medium text-gray-900" %>
    <div class="mt-2">
      <%= f.text_field :display_name, required: true, autofocus: true, autocomplete: "name",
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-900" %>
    <div class="mt-2">
      <%= f.email_field :email, required: true, autocomplete: "email",
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-900" %>
    <div class="mt-2">
      <%= f.password_field :password, required: true, autocomplete: "new-password",
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-900" %>
    <div class="mt-2">
      <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password",
            class: "block w-full rounded-md bg-white px-3 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm" %>
    </div>
  </div>

  <div>
    <%= f.submit "Create account", class: "flex w-full justify-center rounded-md bg-gray-900 px-3 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600 cursor-pointer" %>
  </div>
<% end %>
