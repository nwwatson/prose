<% content_for(:title, "#{@subscriber.email} â€” #{site_name}") %>

<div class="space-y-6">
  <h1 class="text-2xl font-bold text-gray-900"><%= @subscriber.email %></h1>

  <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
    <div class="rounded-lg bg-white p-4 shadow ring-1 ring-gray-200">
      <dt class="text-sm font-medium text-gray-500">Handle</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @subscriber.identity&.handle || "Not set" %></dd>
    </div>
    <div class="rounded-lg bg-white p-4 shadow ring-1 ring-gray-200">
      <dt class="text-sm font-medium text-gray-500">Status</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @subscriber.confirmed? ? "Confirmed" : "Pending" %></dd>
    </div>
    <div class="rounded-lg bg-white p-4 shadow ring-1 ring-gray-200">
      <dt class="text-sm font-medium text-gray-500">Subscribed</dt>
      <dd class="mt-1 text-sm text-gray-900"><%= @subscriber.created_at.strftime("%B %-d, %Y") %></dd>
    </div>
  </dl>
</div>
