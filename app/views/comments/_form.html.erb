<div id="comment_form">
  <% if identity_signed_in? %>
    <%= form_with model: Comment.new, url: post_comments_path(post, slug: post.slug), class: "space-y-3" do |f| %>
      <% if defined?(comment) && comment&.errors&.any? %>
        <div class="text-sm text-red-600 dark:text-red-400"><%= comment.errors.full_messages.to_sentence %></div>
      <% end %>
      <div data-controller="markdown-preview">
        <div class="mb-2 flex border-b border-gray-200 dark:border-gray-700">
          <button type="button" data-action="click->markdown-preview#showWrite" data-markdown-preview-target="writeTab"
                  class="border-b-2 border-gray-900 text-gray-900 dark:border-gray-100 dark:text-gray-100 px-3 pb-2 text-sm font-medium">
            Write
          </button>
          <button type="button" data-action="click->markdown-preview#showPreview" data-markdown-preview-target="previewTab"
                  class="border-b-2 border-transparent text-gray-500 hover:text-gray-700 dark:hover:text-gray-300 px-3 pb-2 text-sm font-medium">
            Preview
          </button>
        </div>
        <%= f.text_area :body, rows: 3, placeholder: "Share your thoughts... (markdown supported)",
              data: { markdown_preview_target: "textarea" },
              class: "block w-full rounded-md bg-white dark:bg-white/5 px-3 py-2 text-sm text-gray-900 dark:text-gray-100 shadow-sm ring-1 ring-inset ring-gray-300 dark:ring-gray-600 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-ink-blue" %>
        <div data-markdown-preview-target="preview"
             class="hidden min-h-[4.5rem] overflow-hidden rounded-md bg-white dark:bg-white/5 px-3 py-2 text-sm text-gray-700 dark:text-gray-300 ring-1 ring-inset ring-gray-300 dark:ring-gray-600 prose-comment">
        </div>
      </div>
      <div class="flex items-center justify-between">
        <p class="text-xs text-gray-400 dark:text-gray-500">
          <strong>**bold**</strong> &nbsp; <em>*italic*</em> &nbsp; <code class="bg-gray-100 dark:bg-gray-800 px-1 rounded">`code`</code> &nbsp; [link](url) &nbsp; > quote
        </p>
        <%= f.submit "Comment", class: "rounded-md bg-charcoal dark:bg-gray-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-700 dark:hover:bg-gray-500 cursor-pointer" %>
      </div>
    <% end %>
  <% else %>
    <div class="rounded-lg border border-gray-200 dark:border-gray-700 p-4 text-center text-sm text-gray-500 dark:text-gray-400">
      <p>Subscribe to join the conversation.</p>
      <div class="mx-auto mt-3 max-w-sm">
        <%= render "subscriptions/form", source_post_id: post.id %>
      </div>
    </div>
  <% end %>
</div>
